---
import ListItem from "../../components/ui/ListItem.astro";
import Layout from "../../layouts/Layout.astro";

import JavaScriptIcon from "../../assets/courses/js-programming/img/js-icon.svg";
---

<Layout>
  <div class="mb-3 bg-skynest-darker bottom-shadow">
    <div class="p-5">
      <a href="/" class="btn btn-sm btn-outline-light"
        ><i class="si-arrow-left"></i> Back</a
      >
    </div>
    <div class="container pb-5">
      <div class="text-center">
        <h1>Learn Programming with JavaScript</h1>
        <JavaScriptIcon width={128} />
      </div>
    </div>
  </div>

  <div class="container">
    <h3>Course Content</h3>
    <div class="accordion mb-5" id="courseAccordion">
      <!-- Module 1 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseOne"
            aria-expanded="true"
            aria-controls="flush-collapseOne"
          >
            Module 1 - Programming Basics
          </button>
        </h2>
        <div
          id="flush-collapseOne"
          class="accordion-collapse collapse show"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem><a href="./1-1">1.1 Hello World!</a></ListItem>
            <ListItem><a href="./1-2">1.2 Arithmetic</a></ListItem>
            <ListItem><a href="./1-3">1.3 Strings</a></ListItem>
            <ListItem><a href="./1-4">1.4 Variables</a></ListItem>
            <ListItem><a href="./1-5">1.5 Updating Variables</a></ListItem>
            <ListItem><a href="./1-6">1.6 Console Input</a></ListItem>
            <ListItem><a href="./1-7">1.7 Numeric Input</a></ListItem>
            <ListItem><a href="./1-8">1.8 Intermediate Data Types and Operations</a></ListItem>
          </div>
        </div>
      </div>
      <!-- Module 2 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseTwo"
            aria-expanded="false"
            aria-controls="flush-collapseTwo"
          >
            Module 2 - Control flow
          </button>
        </h2>
        <div
          id="flush-collapseTwo"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem><a href="./2-1">2.1 Boolean Logic</a></ListItem>
            <ListItem><a href="./2-2">2.2 Selection: If Statements</a></ListItem>
            <ListItem><a href="./2-3">2.3 Branching with If/Else</a></ListItem>
            <ListItem><a href="./2-4">2.4 Nesting Code Blocks</a></ListItem>
          </div>
        </div>
      </div>
      <!-- Module 3 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseThree"
            aria-expanded="false"
            aria-controls="flush-collapseTwo"
          >
            Module 3 - Functions
          </button>
        </h2>
        <div
          id="flush-collapseThree"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem><a href="./">Coming Soon</a></ListItem>
          </div>
        </div>
      </div>
      <!-- Module 4 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseFour"
            aria-expanded="false"
            aria-controls="flush-collapseTwo"
          >
            Module 4 - Arrays
          </button>
        </h2>
        <div
          id="flush-collapseFour"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem><a href="./">Coming Soon</a></ListItem>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
