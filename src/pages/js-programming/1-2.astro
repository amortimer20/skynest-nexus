const Task2 = `
// Addition
console.log("I'm adding 2 and 1. The result is:");
console.log(2 + 1);
console.log();

console.log("Adding $1000 and $500.96 gives us:");
console.log(1000 + 500.96);
console.log();

// Subtraction
console.log("I have 3 apples, and I eat one. Now, I have:");
