---
import Presentation from "../../components/Presentation.astro";
import Divider from "../../components/ui/Divider.astro";
import ListItem from "../../components/ui/ListItem.astro";
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro-expressive-code/components";

const Task1 = `
INSERT
`;
const Task2 = `
INSERT
`;
const SampleOutput = `
INSERT
`;
---

<Layout>
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-10">
                <a
                    href="/INSERT/"
                    class="btn btn-sm btn-outline-light mb-3"
                >
                    <i class="si-arrow-left"></i> Back
                </a>

                <h1>Activity INSERT</h1>
                <Divider variant="8" classes="mb-4" />

                <!-- Introduction -->
                <h2>Introduction</h2>

                <Presentation>
                    <section>
                        <h3>title</h3>
                        <h4 class="text-skynest-theme">subtitle</h4>
                    </section>
                </Presentation>

                <h3>Objectives</h3>
                <ul>
                    <ListItem variant="1">INSERT</ListItem>
                </ul>

                <Divider variant="8" classes="mb-4" />

                <!-- Activity Tasks -->
                <h2>Activity Tasks</h2>
                <ul>
                    <ListItem variant="2">
                        Create a new project named <span
                            class="text-skynest-theme">INSERT</span
                        >.
                    </ListItem>
                    <ListItem variant="2">
                        Complete each task individually.
                    </ListItem>
                </ul>

                <!-- Task 1 -->
                <h3>
                    <span class="text-skynest-theme">Task 1</span>: INSERT
                </h3>
                <ul>
                    <ListItem variant="2">
                        INSERT
                    </ListItem>
                </ul>
                <Code
                    code={Task1}
                    frame="code"
                    lang="INSERT"
                    showLineNumbers
                    title="INSERT"
                />

                <hr class="my-4" />

                <!-- Task 2 -->
                <h3>
                    <span class="text-skynest-theme">Task 2</span>: INSERT
                </h3>
                <ul>
                    <ListItem variant="2">
                        INSERT
                    </ListItem>
                </ul>
                <Code
                    code={Task2}
                    frame="code"
                    lang="INSERT"
                    showLineNumbers
                    title="INSERT"
                />
                
                <!-- End Activity Tasks -->

                <Divider variant="8" classes="my-4" />

                <h2>Sample Output</h2>

                <p>
                    Your program output should something similar to the sample
                    output below.
                </p>

                <Code
                    code={SampleOutput}
                    frame="terminal"
                    lang="INSERT"
                    showLineNumbers={false}
                    title="Sample Output"
                />

                <Divider variant="8" classes="my-4" />

                <h2>Reflection Questions</h2>

                <p>
                    You may write your reflection answers as comments at the
                    bottom of your code.
                </p>

                <ol>
                    <li>
                        INSERT
                    </li>
                </ol>

                <Divider variant="8" classes="my-4" />

                <h2>Submission</h2>

                <p>
                    Submit your activity and reflection answers to the
                    appropriate dropbox.
                </p>

                <h1
                    class="text-center mt-5 text-skynest-theme border border-primary"
                >
                    Activity Complete
                </h1>
            </div>
        </div>
    </div>
</Layout>
