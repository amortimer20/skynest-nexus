            <h4>Demo: Create the Driving Age Checker</h4>
            <Code code={Figure1} lang="javascript" class="text-start mb-3" />
            <Code
              code={Figure3}
              lang="txt"
              frame="terminal"
              title="Sample Output 1"
              class="text-start fragment mb-3"
            />
