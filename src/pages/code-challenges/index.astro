---
import ListItem from "../../components/ui/ListItem.astro";
import Layout from "../../layouts/Layout.astro";

import CodeChallengesIcon from "../../assets/courses/code-challenges/img/code-challenges-icon.svg";
import Divider from "../../components/ui/Divider.astro";
---

<Layout>
  <div class="mb-3 bg-skynest-darker">
    <div class="p-5">
      <a href="/" class="btn btn-sm btn-outline-light"
        ><i class="si-arrow-left"></i> Back</a
      >
    </div>
    <div class="container pb-5">
      <div class="text-center">
        <h1>Code Challenges</h1>
        <CodeChallengesIcon width={128} />
      </div>
    </div>
  </div>

  <div class="container">
    <h3>Solving Code Challenges</h3>
    <p><a href="./code-challenge-tips">Tips for Solving Code Challenges</a></p>
    <Divider variant="3" classes="my-4" />
    <h3>Challenges</h3>
    <div class="accordion mb-5" id="courseAccordion">
      <!-- Section 1 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseOne"
            aria-expanded="true"
            aria-controls="flush-collapseOne"
          >
            Section 1 - Programming Basics
          </button>
        </h2>
        <div
          id="flush-collapseOne"
          class="accordion-collapse collapse show"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <h4>Core Challenges</h4>
            <ul>
              <ListItem
                ><a href="./1-1">Challenge 1.1 - Mad Lib</a></ListItem
              >
              <ListItem
                ><a href="./1-3-mi-to-km"
                  >Challenge 1.2 - Miles to Kilometers Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./1-4-celsius-to-fahrenheit"
                  >Challenge 1.3 - Celsius to Fahrenheit Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./1-5-tip-calculator"
                  >Challenge 1.4 - Tip Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./1-6-height-to-inches"
                  >Challenge 1.5 - Height Converter</a
                ></ListItem
              >
              <ListItem
                ><a href="./1-7-change-calculator"
                  >Challenge 1.6 - Change Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./1-8-line-slope"
                  >Challenge 1.7 - Line Slope Calculator</a
                ></ListItem
              >
            </ul>

            <hr />

            <h4>Sprints</h4>
            <ul>
              <ListItem
                ><a href="./spr-1-1"
                  >Sprint 1.1 - Chain Letter</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-2"
                  >Sprint 1.2 - Letter Art</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-3"
                  >Sprint 1.3 - Mail Call</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-4"
                  >Sprint 1.4 - Display Clock</a
                ></ListItem
              >
            </ul>
          </div>
        </div>
      </div>
      <!-- Section 2 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseTwo"
            aria-expanded="false"
            aria-controls="flush-collapseTwo"
          >
            Section 2 - Control Flow
          </button>
        </h2>
        <div
          id="flush-collapseTwo"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem
              ><a href="./2-1-magic-8-ball">Challenge 2.1 - Magic 8-Ball</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-2-quadratic-equation"
                >Challenge 2.2 - Quadratic Equation</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-3-dungeon-crawler"
                >Challenge 2.3 - Dungeon Crawler</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-4-fizz-buzz">Challenge 2.4 - FizzBuzz</a></ListItem
            >
            <ListItem
              ><a href="./2-5-atm-validation">Challenge 2.5 - ATM Validation</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-6-heads-or-tails">Challenge 2.6 - Heads or Tails</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-7-coin-flip-simulator"
                >Challenge 2.7 - Coin Flip Simulator</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-8-pc-diagnosis">Challenge 2.8 - PC Diagnosis Tool</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-9-letter-grade"
                >Challenge 2.9 - Letter Grade Calculator</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-10-bmi-calculator"
                >Challenge 2.10 - BMI Calculator</a
              ></ListItem
            >
            <ListItem
              ><a href="./2-11-kg-to-lbs-table"
                >Challenge 2.11 - Kilograms to Pounds Table</a
              ></ListItem
            >
          </div>
        </div>
      </div>
      <!-- Section 3 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseThree"
            aria-expanded="false"
            aria-controls="flush-collapseThree"
          >
            Section 3 - Data Structures
          </button>
        </h2>
        <div
          id="flush-collapseThree"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem
              ><a href="./3-1-raffle">Challenge 3.1 - Raffle</a></ListItem
            >
            <ListItem
              ><a href="./3-2-sample-data"
                >Challenge 3.2 - Sample Data Generator</a
              ></ListItem
            >
            <ListItem
              ><a href="./3-3-letter-grades"
                >Challenge 3.3 - Letter Grade Curve Calculator</a
              ></ListItem
            >
            <ListItem
              ><a href="./3-4-reverse-array">Challenge 3.4 - Array Reversal</a
              ></ListItem
            >
            <ListItem
              ><a href="./3-5-count-occurences"
                >Challenge 3.5 - Count Occurences</a
              ></ListItem
            >
            <ListItem
              ><a href="./3-6-even-odd"
                >Challenge 3.6 - Find Even and Odd Numbers</a
              ></ListItem
            >
          </div>
        </div>
      </div>
      <!-- Section 4 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseFour"
            aria-expanded="false"
            aria-controls="flush-collapseFour"
          >
            Section 4 - Functions
          </button>
        </h2>
        <div
          id="flush-collapseFour"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem
              ><a href="./4-1-area-circle-fn"
                >Challenge 4.1 - Area of a Circle Function</a
              ></ListItem
            >
            <ListItem
              ><a href="./4-2-min-max">Challenge 4.2 - Min and Max Finder</a
              ></ListItem
            >
            <ListItem
              ><a href="./4-3-celsius-to-fahrenheit-fn"
                >Challenge 4.3 - Celsius to Fahrenheit Function</a
              ></ListItem
            >
            <ListItem
              ><a href="./4-4-average">Challenge 4.4 - Average Finder</a
              ></ListItem
            >
          </div>
        </div>
      </div>
      <!-- Section 5 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseFive"
            aria-expanded="false"
            aria-controls="flush-collapseFive"
          >
            Section 5 - Object-Oriented Programming
          </button>
        </h2>
        <div
          id="flush-collapseFive"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem
              ><a href="./5-1-rectangle-class"
                >Challenge 5.1 - Rectangle Class</a
              ></ListItem
            >
            <ListItem
              ><a href="./5-2-student-class">Challenge 5.2 - Student Class</a
              ></ListItem
            >
            <ListItem
              ><a href="./5-3-stock-class">Challenge 5.3 - Stock Class</a
              ></ListItem
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
