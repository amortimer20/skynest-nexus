---
import ListItem from "../../components/ui/ListItem.astro";
import Layout from "../../layouts/Layout.astro";

import CodeChallengesIcon from "../../assets/courses/code-challenges/img/code-challenges-icon.svg";
import Divider from "../../components/ui/Divider.astro";
---

<Layout>
  <div class="mb-3 bg-skynest-darker bottom-shadow">
    <div class="p-5">
      <a href="/" class="btn btn-sm btn-outline-light"
        ><i class="si-arrow-left"></i> Back</a
      >
    </div>
    <div class="container pb-5">
      <div class="text-center">
        <h1>Code Challenges</h1>
        <CodeChallengesIcon width={128} />
      </div>
    </div>
  </div>

  <div class="container">
    <h3>Solving Code Challenges</h3>
    <p><a href="./tips">Tips for Solving Code Challenges</a></p>
    <Divider variant="3" classes="my-4" />
    <h3>Challenges</h3>
    <div class="accordion mb-5" id="courseAccordion">
      <!-- Section 1 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseOne"
            aria-expanded="true"
            aria-controls="flush-collapseOne"
          >
            Section 1 - Programming Basics
          </button>
        </h2>
        <div
          id="flush-collapseOne"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <h4>Sprints</h4>
            <ul>
              <ListItem
                ><a href="./spr-1-1"
                  >Sprint 1.1 - Chain Letter</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-2"
                  >Sprint 1.2 - Letter Art</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-3"
                  >Sprint 1.3 - Mail Call</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-4"
                  >Sprint 1.4 - Display Clock</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-5"
                  >Sprint 1.5 - Simple Math</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-6"
                  >Sprint 1.6 - Backpack Weight</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-7"
                  >Sprint 1.7 - Grocery Grab</a
                ></ListItem
              >
              <ListItem
                ><a href="./spr-1-8"
                  >Sprint 1.8 - Height Converter</a
                ></ListItem
              >
            </ul>

            <hr />

            <h4>Applications</h4>
            <ul>
              <ListItem
                ><a href="./app-1-1">Application 1.1 - Mad Lib</a></ListItem
              >
              <ListItem
                ><a href="./app-1-2"
                  >Application 1.2 - Miles to Kilometers Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./app-1-3"
                  >Application 1.3 - Celsius to Fahrenheit Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./app-1-4"
                  >Application 1.4 - Tip Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./app-1-5"
                  >Application 1.5 - Change Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./app-1-6"
                  >Application 1.6 - Line Slope Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./app-1-7"
                  >Application 1.7 - Fuel Calculator</a
                ></ListItem
              >
              <ListItem
                ><a href="./app-1-8"
                  >Application 1.8 - Area of a Circle</a
                ></ListItem
              >
            </ul>
          </div>
        </div>
      </div>
      <!-- Section 2 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseTwo"
            aria-expanded="false"
            aria-controls="flush-collapseTwo"
          >
            Section 2 - Control Flow
          </button>
        </h2>
        <div
          id="flush-collapseTwo"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <h4>Sprints</h4>
            <ul>
              <ListItem><a href="./spr-2-1">Sprint 2.1 Birth Seasons</a></ListItem>
              <ListItem><a href="./spr-2-2">Sprint 2.2 Traffic Light</a></ListItem>
              <ListItem><a href="./spr-2-3">Sprint 2.3 Hat Size Checker</a></ListItem>
              <ListItem><a href="./spr-2-4">Sprint 2.4 ASCII Art Loop</a></ListItem>
            </ul>

            <hr />

            <h4>Applications</h4>
            <ul>
              <ListItem><a href="./app-2-1">Application 2.1 Magic 8-Ball</a></ListItem>
              <ListItem><a href="./app-2-2">Application 2.2 Quadratics</a></ListItem>
              <ListItem><a href="./app-2-3">Application 2.3 BMI Calculator</a></ListItem>
              <ListItem><a href="./app-2-4">Application 2.4 PC Diagnosis Tool</a></ListItem>
              <ListItem><a href="./app-2-5">Application 2.5 Heads or Tails Game</a></ListItem>
              <ListItem><a href="./app-2-6">Application 2.6 Coin Flip Simulation</a></ListItem>
              <ListItem><a href="./app-2-7">Application 2.7 Kg to Lbs Table</a></ListItem>
            </ul>
          </div>
        </div>
      </div>
      <!-- Section 3 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseThree"
            aria-expanded="false"
            aria-controls="flush-collapseThree"
          >
            Section 3 - Functions
          </button>
        </h2>
        <div
          id="flush-collapseThree"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <!-- <h4>Sprints</h4>
            <ul>
