---
import ListItem from "../../components/ui/ListItem.astro";
import Layout from "../../layouts/Layout.astro";

import CSharpIcon from "../../assets/courses/csharp-programming/img/csharp-icon.svg";
---

<Layout>
  <div class="mb-3 bg-darker">
    <div class="p-5">
      <a href="/" class="btn btn-sm btn-outline-light">‚Üê Back</a>
    </div>
    <div class="container pb-5">
      <div class="text-center">
        <h1>Learn Programming with C#</h1>
        <CSharpIcon width={128} />
      </div>
    </div>
  </div>

  <div class="container">
    <h3>Course Content</h3>
    <div class="accordion mb-5" id="courseAccordion">
      <!-- Introduction -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseOne"
            aria-expanded="true"
            aria-controls="flush-collapseOne"
          >
            Introduction
          </button>
        </h2>
        <div
          id="flush-collapseOne"
          class="accordion-collapse collapse show"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ul>
              <ListItem
              ><a href="./introduction">Introduction to Computer Science and Programming</a
              ></ListItem
            >
            </ul>
          </div>
        </div>
      </div>
      <!-- Section 1 -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#flush-collapseTwo"
            aria-expanded="false"
            aria-controls="flush-collapseTwo"
          >
            Module 1 - Programming Basics
          </button>
        </h2>
        <div
          id="flush-collapseTwo"
          class="accordion-collapse collapse"
          data-bs-parent="#courseAccordion"
        >
          <div class="accordion-body">
            <ListItem
              ><a href="./">Placeholder</a
              ></ListItem
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
